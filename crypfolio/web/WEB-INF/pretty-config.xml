<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

<!--    <url-mapping id="index">
        <pattern value="/"/>
        <view-id value="/faces/login.xhtml"/>
    </url-mapping>-->

    <url-mapping id="login">
        <pattern value="/login"/>
        <view-id value="/faces/login.xhtml"/>
    </url-mapping>

    <url-mapping id="user">
        <pattern value="/user"/>
        <view-id value="/faces/user.xhtml"/>
    </url-mapping>

    <url-mapping id="signup">
        <pattern value="/signup"/>
        <view-id value="/faces/signup.xhtml"/>
    </url-mapping>

    <url-mapping id="forgot-password">
        <pattern value="/forgot-password"/>
        <view-id value="/faces/forgot-password.xhtml"/>
    </url-mapping>

    <url-mapping id="error">
        <pattern value="/error"/>
        <view-id value="/faces/error-page.xhtml"/>
    </url-mapping>

</pretty-config>